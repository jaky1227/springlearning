<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="criticsmEngine" class="com.springinaction.Chapter4.AspectJ.CriticismEngineImpl">
        <property name="criticismPool">
            <list>
                <value>A must see show!</value>
                <value>Worst performance ever !</value>
                <value>Normal</value>
            </list>
        </property>
    </bean>

    <bean id="jZhouConcert" class="com.springinaction.Chapter4.AspectJ.JZhouConcert" />

    <bean class="com.springinaction.Chapter4.AspectJ.CriticAspect"
          factory-method="aspectOf">
        <property name="criticismEngine" ref="criticsmEngine" />
    </bean>
</beans>